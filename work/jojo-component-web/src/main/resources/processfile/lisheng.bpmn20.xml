        <omgdi:waypoint x="361.0" y="200.0"></omgdi:waypoint>
        <omgdi:waypoint x="400.0" y="210.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="endFlow" id="BPMNEdge_endFlow">
        <omgdi:waypoint x="521.0" y="210.0"></omgdi:waypoint>
        <omgdi:waypoint x="580.0" y="199.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
