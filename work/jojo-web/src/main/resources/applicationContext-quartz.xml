<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 启动触发器的配置开始 -->
	<bean name="startQuertz" lazy-init="false" autowire="no" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="demoJobTrigger" />
				<!-- add more here -->
			</list>
		</property>
		<property name="schedulerName">
			<value>jobScheduler</value>
		</property>
	</bean>
	<!-- 启动触发器的配置结束 -->


	<!-- quartz-2.x的配置 -->
	<!-- rule loader -->
	<bean id="demoJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="demoJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/20 * * * ?</value>
		</property>
	</bean>
	<!-- 调度的配置结束 -->

	<!-- job的配置开始 -->
	<bean id="demoJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="demoJob" />
		</property>
		<property name="targetMethod">
			<value>work</value>
		</property>
	</bean>
	<!-- job的配置结束 -->

	<!-- 具体工作的bean -->
	<!-- demo job show-->
	<bean id="demoJob" class="com.jojo.service.quartz.SchedulingJob">
	</bean>

</beans> 